<Router AppAssembly="typeof(Program).Assembly"
        AdditionalAssemblies="@Sabatex.Core.RadzenBlazor.WASMClient.WASMClients.Select(c => c.Assembly).ToArray()" NotFoundPage="typeof(Pages.NotFound)">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Components.MainLayout)">
            <NotAuthorized>
                <RedirectToLogin />
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>
