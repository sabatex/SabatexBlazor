@using System.Reflection
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
<Router AppAssembly="@AppAssembly" AdditionalAssemblies="@AdditionalAssemblies" >
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="@DefaultLayout">
            <NotAuthorized>
                <SabatexRedirectToLogin />
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>

@code {
    [Parameter]
    public Assembly? AppAssembly { get; set; }
    [Parameter]
    public Assembly[] AdditionalAssemblies { get; set; } = Array.Empty<Assembly>();
    [Parameter]
    public Type DefaultLayout { get; set; }
    protected override void OnInitialized()
    {
        base.OnInitialized();
    } 
}