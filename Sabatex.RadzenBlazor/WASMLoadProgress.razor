@if (!isLoadingComplete)
{
    <div class="wasm-loader">
        <svg class="loading-progress">
            <circle r="40%" cx="50%" cy="50%" />
            <circle r="40%" cx="50%" cy="50%" />
        </svg>
        <div class="loading-progress-text"></div>
        <div class="spinner" role="status" aria-label="Завантаження застосунку"></div>
    </div>
}

  @code {
    private bool isLoadingComplete = false;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Чекаємо завершення завантаження WASM (можна додати затримку або перевірку стану)
            await Task.Delay(500); // опціонально — для плавності
            isLoadingComplete = true;
            StateHasChanged();
        }
    }
       }