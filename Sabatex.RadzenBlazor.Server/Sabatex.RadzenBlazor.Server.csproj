<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<Version>9.0.9</Version>
	<Copyright>Serhiy Lakas</Copyright>
	<Authors>Serhiy Lakas</Authors>
	<Title>Sabatex Radzen Blazor Server</Title>
	<Description>Extend Radzen Blazor Components for Server Side</Description>
	<PackageTags>#Blazor</PackageTags>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<GenerateDocumentationFile>true</GenerateDocumentationFile>
	  <RepositoryUrl>https://github.com/sabatex/Sabatex.RadzenBlazor</RepositoryUrl>
  </PropertyGroup>
	<ItemGroup>
		<!--<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server" Version="9.0.5" />-->
		<PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" />
		<PackageReference Include="Microsoft.EntityFrameworkCore" />
		<PackageReference Include="Microsoft.AspNetCore.Authentication.Google" />
		<PackageReference Include="Microsoft.AspNetCore.Authentication.MicrosoftAccount" />
		<PackageReference Include="MailKit"  />
		<PackageReference Include="Microsoft.EntityFrameworkCore.DynamicLinq" />
		<PackageReference Include="Radzen.Blazor" />
		<PackageReference Include="System.CommandLine" />
	</ItemGroup>
	
	
	<ItemGroup Condition="'$(Configuration)' == 'Debug'">
		<ProjectReference Include="..\Sabatex.Core\Sabatex.Core.csproj" />
	</ItemGroup>


	<ItemGroup Condition="'$(Configuration)' == 'Release'">
			<PackageReference Include="Sabatex.Core" />
	</ItemGroup>

</Project>
