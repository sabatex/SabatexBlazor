<div class="nav-item @Class">
    <NavLink class="nav-link" href="@Href" Match="@(Exact? NavLinkMatch.All: NavLinkMatch.Prefix)">
        <span class="me-2 bi bi-@Icon" aria-hidden="true"></span> @Text
    </NavLink>
</div>

@code {
    [Parameter]
    public string? Href { get; set; }
    [Parameter]
    public string? Text { get; set; }
    [Parameter]
    public string? Icon { get; set; }
    [Parameter]
    public string? Class { get; set; }
    [Parameter]
    public bool Exact { get; set; } = false;



}
