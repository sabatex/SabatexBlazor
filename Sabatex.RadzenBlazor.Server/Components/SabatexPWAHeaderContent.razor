@using Microsoft.AspNetCore.Http
@foreach (var WASMClient in RadzenBlazor.WASMClientAttribute.WASMClients)
{
    if (HttpContext.Request.Path.StartsWithSegments(WASMClient.PrefixRoute))
    {
        if (WASMClient.Manifest != null)
        {
            <link rel="icon" type="image/png" href="@WASMClient.Icon" />
            <link rel="apple-touch-icon" sizes="512x512" href="@WASMClient.AppleTouchIcon" />
            <link rel="manifest" href="@WASMClient.Manifest" />
        }
    }
}

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

}
