@using Microsoft.AspNetCore.Http
    @if (IsWebAssembly)
    {
        @WASM
    }
    else
    {
        @SSR
    }

@code {
    [Parameter]
    public RenderFragment? WASM { get; set; }
    [Parameter]
    public RenderFragment? SSR { get; set; }

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;
    
    private bool IsWebAssembly 
    {
        get 
        {
            foreach (var WASMClient in RadzenBlazor.WASMClient.WASMClients)
            {
                if (HttpContext.Request.Path.StartsWithSegments(WASMClient.PrefixRoute))
                {
                    return true;
                }
            }
            return false;
        }
    }
}